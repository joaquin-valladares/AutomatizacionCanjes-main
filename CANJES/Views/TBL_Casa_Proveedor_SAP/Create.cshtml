@model CANJES.Models.TBL_Casa_Proveedor_SAP

@{
    ViewBag.Title = "Create";
}

<h2>Crear Casa Según Cliente Proveedor</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Casa/Laboratorio", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Cod_Casa_SAP", new SelectList(ViewBag.Cod_Casa_SAP, "Value", "Text"), "---Seleccione Casa---", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Cod_Casa_SAP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Cliente SAP", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                @Html.DropDownList("Cod_Cliente_SAP", new SelectList(ViewBag.Cod_Cliente_SAP, "Value", "Text"), "---Seleccione Cliente---", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Cod_Cliente_SAP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sociedad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Sociedad", new SelectList(ViewBag.Sociedad, "Value", "Text"), "---Seleccione Sociedad---", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sociedad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div class="mt-3">
    <a href="@Url.Action("Index", "TBL_Casa_Proveedor_SAP" )"><i class="fas fa-arrow-circle-left"></i> Regresar a listado</a>
</div>

@if (ViewBag.MsjCreate != null)
{
    <script type="text/javascript">
        window.onload = function () {
            swal({
                title: "Fallo al Registrar",
                text: "¡Ya existe un registro con los mismos atributos!",
                icon: "warning", //built in icons: success, warning, error, info
                timer: 5000, //timeOut for auto-close
            });
        };
    </script>
}

@if (ViewBag.MsjError != null)
{
    <script type="text/javascript">
        window.onload = function () {
            swal({
                title: "Fallo al Registrar",
                text: "¡No tiene relación con la sociedad seleccionada!",
                icon: "warning", //built in icons: success, warning, error, info
                timer: 5000, //timeOut for auto-close
            });
        };
    </script>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
