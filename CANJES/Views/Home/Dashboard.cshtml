@*@model CANJES.Models.TBL_UsuariosCanjes*@

@model IEnumerable<CANJES.Models.ClsUsuariosDashboard>

@{
    ViewBag.Title = "Bienvenido/a";
    string userName = HttpContext.Current.User.Identity.Name;

}

@*datatables*@
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">


<h2 class="text-primary">@ViewBag.Title, @userName</h2>
<hr />
<div>
    <div class="row">
        <div class="col-md-12">
            <h4 class="text-primary">Estos son tus centros asignados</h4>
        </div>
    </div>

    <div class="c-table">
        <div class="table-responsive table-stripered ctable-hijo">
            <table id="table_id" class="display">
                <thead>
                    <tr>
                        <th>Sociedad</th>
                        <th>Centro</th>
                        <th>Estado</th>
                        <th>Rol</th>
                        <th>Correo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.sociedades)</td>
                            <td>@Html.DisplayFor(modelItem => item.centros)</td>
                            <td>@Html.DisplayFor(modelItem => item.estado)</td>
                            <td>@Html.DisplayFor(modelItem => item.rol)</td>
                            <td>@Html.DisplayFor(modelItem => item.email)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>

    @*para iniciar el datatable*@
    <script>
        $(document).ready(function () {
            $('#table_id').DataTable({
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registros por página",
                    "zeroRecords": "Datos no encontrados",
                    "info": "Mostrando Página _PAGE_ de _PAGES_",
                    "infoEmpty": "No hay registros disponibles",
                    "infoFiltered": "(Filtrado de _MAX_ registros totales)",
                    "search": "Buscar",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                }
            });
        });
    </script>
}


