@{
    ViewBag.Title = "Inicio de sesión";
}

@{ if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        //tiene un valor
        <div class="alert alert-danger">@ViewBag.Message</div>
    }
}
@*<hr />*@
<div class="row">
    <div class="col-md-6">
        <div class="card style-border-img">
            <div class="card-header span-eye">
                <h3 class="text-center text-farmex-rose font-weight-bold mb-4">Inicio de sesión</h3>
            </div>
            <div class="card-body">
                <form action="/Home/Login" method="post">
                    <div class="form-group mt-3">
                        <label for="exampleInputEmail1" class="text-farmex-purple font-weight-bold">
                            Nombre de usuario
                        </label>
                        <input type="text" class="form-control col-md-12" name="user_name" id="user_name"
                               aria-describedby="emailHelp" />

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1" class="text-farmex-purple font-weight-bold">Contraseña</label>
                        <div class="input-group mb-3">
                            <input type="password" class="form-control  col-md-12" name="user_pass" id="user_pass" />
                            <div class="input-group-append">
                                <button id="show_password" class="btn btn-primary" type="button" onclick="mostrarPassword()"> <span class="fa fa-eye-slash icon"></span> </button>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-info btn-sm btn-block" href="#">Ingresar</button>
                    <div class="text-center">
                        @Html.ActionLink("¿Olvidaste tu contraseña?, ingresa aquí", "StartRecovery", "Access")
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="row  mb-3">
            <h3 class="text-primary center">Plataforma de canjes</h3>
        </div>
        <img src="@Url.Content("~/Images/ICONO3.png")" class="w-50 center mt-3" alt="canjes" />
    </div>
</div>


<script>
    function mostrarPassword() {
        var cambio = document.getElementById("user_pass");
        if (cambio.type == "password") {
            cambio.type = "text";
            $('.icon').removeClass('fa fa-eye-slash').addClass('fa fa-eye');
        } else {
            cambio.type = "password";
            $('.icon').removeClass('fa fa-eye').addClass('fa fa-eye-slash');
        }
    }
</script>